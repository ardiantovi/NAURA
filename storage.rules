
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for displaying them in the app
    match /{allPaths=**} {
      allow read;
    }
    
    // Restrict write access to the 'uploads' folder to only authenticated users
    match /uploads/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
